<h1>Welcome to Rails, Engine!</h1>

<h3>You can search for Merchants by name with the below form:</h3>

<%= form_with url: "/", method: :get, local: true do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>

  <%= form.submit "Search" %>
<% end %>

<% if @merchants %>
  <% @merchants.each do |merchant| %>
    <%= merchant.name %><br>
  <% end %>
<% end %>
